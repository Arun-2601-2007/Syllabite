<% if(success && success.length)  {%>
    <div class="row">
        <div class="alert alert-success mt-2 col-6 offset-3 alert-dismissible fade show text-center" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    
<% } %>
<% if(error && error.length)  {%>
    <div class="row">
        <div class="alert alert-danger mt-2 col-6 offset-3 alert-dismissible fade show text-center" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    
<% } %>